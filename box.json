{
  "$schema": "https://box-project.github.io/box/schema.json",
  "output": "magebean.phar",
  "main": "bin/magebean",
  "chmod": "0755",
  "stub": true,
  "compression": "GZ",

  "directories": [
    "bin",
    "src",
    "resources",
    "vendor"
  ],
  "files": [
    "composer.json",
    "LICENSE"
  ],

  "finder": [
    {
      "in": ["."],
      "exclude": ["tests", "test", "docs", ".github", "vendor/bin", "node_modules", "cache", "var", "build", "dist"],
      "notPath": [".env", ".env.example", ".phpunit.result.cache", ".php-cs-fixer.cache"]
    }
  ],

  "banner": "Magebean CLI",
  "check-requirements": false
}
